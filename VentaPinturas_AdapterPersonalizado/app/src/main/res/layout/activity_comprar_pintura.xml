<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComprarPintura"
    android:background="#7A87EC"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/comprarImg"
        android:layout_width="350sp"
        android:layout_height="350sp"
        android:src="@drawable/ic_puntillismo"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/comprarObra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/comprarPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:textSize="15sp"
        android:textColor="#EC0A0A"
        android:textStyle="italic"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/comprarNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ingrese su nombre"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/comprarApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ingrese su apellido"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/comprarNit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ingrese su NIT"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/btnComprar"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:text="Comprar"
        />
    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:text="Cancelar"
        />
</LinearLayout>