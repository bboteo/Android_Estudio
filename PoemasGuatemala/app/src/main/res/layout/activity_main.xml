<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_guatemala"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        />
    <Button
        android:id="@+id/btnPoemasRomanticos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Poemas Romanticos"
        android:textSize="25dp"
        android:backgroundTint="#F60808"
        />
    <Button
        android:id="@+id/btnPoemasHimnos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Poemas Himnos"
        android:textSize="25dp"
        android:backgroundTint="#037185"
        />
    <Button
        android:id="@+id/btnPoemasSatira"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Poemas Varios"
        android:textSize="25dp"
        android:backgroundTint="#9F9004"
        />
</LinearLayout>