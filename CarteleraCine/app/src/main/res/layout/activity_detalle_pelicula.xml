<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallePelicula"
    android:orientation="vertical"
    android:background="#B87D24">
    <ImageButton
        android:id="@+id/imgPeliculaDetalle"
        android:layout_width="200sp"
        android:layout_height="250sp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"
        android:layout_margin="5sp"
        android:scaleType="fitCenter"
        android:background="#B87D24"/>
    <TextView
        android:id="@+id/tituloPeliculaDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Pelicula"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5sp"/>
    <Button
        android:id="@+id/btnCompraBoleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar boletos"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10sp"
        android:background="#526BE1"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        app:tabTextColor="@color/white" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/fragPelicula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>