<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHARED PREFERENCE EJERCICIO"
        android:textSize="25sp"
        android:textColor="@color/purple_700"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="20sp"/>
    <EditText
        android:id="@+id/edtCarnet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su Carnet"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/edtCentroEstudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su Centro de estudio"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/edtCarrera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su carrera"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/edtCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su Curso"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:inputType="text"/>
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Informacion"
        android:layout_margin="15sp"/>
    <Button
        android:id="@+id/btnVerDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Datos"
        android:layout_margin="15sp"/>
</LinearLayout>